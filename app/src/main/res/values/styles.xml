<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="DrawerItemText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SectionCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>